<?xml version="1.0"?>
<robot name="my_plane">
  <link name="plane_link">
    <!-- static zero-mass inertial -->
    <inertial>
      <mass value="0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>

    <!-- visual: *only* the mesh, scaled 10Ã—10 -->
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="custom_plane.obj" scale="4 4 1"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>

    <!-- collision: either reuse the mesh or drop it if you don't need collisions -->
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="custom_plane.obj" scale="4 4 1"/>
      </geometry>
    </collision>
  </link>
</robot>
